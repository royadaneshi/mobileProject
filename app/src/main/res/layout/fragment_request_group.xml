<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_page_background"
    tools:context=".RequestGroupFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Click to accept request"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:id="@+id/message_request_group"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/request_group_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/message_request_group"
            android:layout_marginTop="5dp" />
    </RelativeLayout>


</FrameLayout>