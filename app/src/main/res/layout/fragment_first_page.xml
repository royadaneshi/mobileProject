<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56EDEDED"
    tools:context=".FirstPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Welcome to Dictionary App"
            android:gravity="center"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/user_score"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="You have 0 score" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/dictionary_background"/>

        <TextView
            android:id="@+id/user_premium"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="You're account not premium"
            android:gravity="center"
            android:layout_marginTop="21dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/checkInternetTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="You are online"
            android:textSize="16sp"
            android:gravity="center"/>

    </LinearLayout>

</FrameLayout>